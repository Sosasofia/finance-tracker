# Usar .NET 8 SDK para compilar
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiar archivos al contenedor
COPY . .

# Restaurar dependencias
RUN dotnet restore "FinanceTracker.Server.csproj"

# Publicar la aplicación
RUN dotnet publish "FinanceTracker.Server.csproj" -c Release -o /app/publish

# Usar la imagen base para ejecución de la app
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Copiar los archivos publicados al contenedor
COPY --from=build /app/publish .

# Comando de inicio
ENTRYPOINT ["dotnet", "FinanceTracker.Server.dll"]
